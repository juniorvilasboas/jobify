<%- include('header') %>
    <h2>
        Admin Vagas:
        <a href="/admin/vagas">Vagas</a>
    </h2>
    <div>
        <form method="POST">
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control <% if(errors.indexOf('title') >= 0) { %>is-invalid<% } %>" id="title" placeholder="Titulo da vaga" name="title" value="<%- form.title %>">
                <div class="invalid-feedback">
                    Por favor, informe o titulo da vaga!
                </div>
            </div>
            <div class="form-group">
                <label for="description">Descrição:</label>
                <textarea class="form-control <% if(errors.indexOf('description') >= 0) { %>is-invalid<% } %>" id="description" rows="3" name="description"><%- form.description %></textarea>
                <div class="invalid-feedback">
                    Por favor, informe a descrição da vaga!
                </div>
            </div>
            <div class="form-group">
                <label for="category_id">Categoria:</label>
                <select class="form-control" id="category_id" name="category_id">
                    <% categorias.forEach( categoria => { %>
                        <option value="<%= categoria.id %>"><%= categoria.description %></option>
                    <% }) %>
                </select>
            </div>
            <div class="from-group">
                <button class="btn btn-primary">Salvar vaga</button>
            </div>
        </form>
    </div>
<%- include('footer') %>