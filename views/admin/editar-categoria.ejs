<%- include('header') %>
    <h2>
        Admin Categoria:
        <a href="/admin/categorias">Categorias</a>
    </h2>
    <div>
        <form method="POST">
            <div class="form-group">
                <label for="description">Categoria</label>
                <input type="text" class="form-control <% if(errors.indexOf('description') >= 0) { %>is-invalid<% } %>" id="description" placeholder="Titulo da Categoria" name="description" value="<%= form.description %>">
                <div class="invalid-feedback">
                    Por favor, informe o titulo da categoria!
                </div>
            </div>
            <div class="from-group">
                <button class="btn btn-primary">Salvar categoria</button>
            </div>
        </form>
    </div>
<%- include('footer') %>